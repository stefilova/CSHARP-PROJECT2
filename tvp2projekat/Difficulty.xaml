<Page x:Class="tvp2projekat.DifficultyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tvp2projekat"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DifficultyPage">

    <Grid Background="#e6ffff">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Nazad" Grid.Row="1" Click="ButtonNazad_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10 0 0 10" FontSize="18"/>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="Ween - Ocean Man Chiptune Cover.mp3" LoadedBehavior="Play" Balance="0" MediaEnded="mediaElement_MediaEnded"/>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Easy" Click="ButtonEz_Click" Margin="5" FontSize="18"/>
            <Button Content="Normal" Click="ButtonNorm_Click"  Margin="5" FontSize="18"/>
            <Button Content="Hard" Click="ButtonHard_Click" Margin="5" FontSize="18"/>
        </StackPanel>


    </Grid>
</Page>
